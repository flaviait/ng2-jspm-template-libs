{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "customTypings.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compileOnSave": true
}
